= form_for([@project, @plan, @testcase], html: { class: 'form-horizontal' }) do |f|
  - if @testcase.errors.any?
    #error_explanation
      strong = "#{pluralize(@testcase.errors.count, "error")} prohibited this testcase from being saved:"
      ul
        - @testcase.errors.full_messages.each do |message|
          li = message

  .form-group
    = f.label :title, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :title, class: 'form-control', required: true
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :description, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', class: 'btn btn-primary'

